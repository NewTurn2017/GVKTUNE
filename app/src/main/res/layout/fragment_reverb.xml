<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.view.rt.RTFragment">

    <RelativeLayout
        android:id="@+id/header"
        style="@style/nowCardStyle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/micButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            android:src="@drawable/mic_red" />

        <ImageButton
            android:id="@+id/cancelButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="left"
            android:scaleType="center"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <com.gvkorea.gvktune.view.view.rt.util.MySurfaceView
            android:id="@+id/waveform"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/cancelButton"
            android:layout_toRightOf="@+id/micButton" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_rt60s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="146dp"
        android:textColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:fillViewport="true">

        <com.gvkorea.gvktune.view.view.rt.util.NowLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/infoCard"
                style="@style/nowCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infoHeading"
                    style="@style/BigText"
                    android:text="@string/claptitle"
                    tools:context=".MainActivity" />

                <TextView
                    android:id="@+id/infoDescription"
                    style="@style/SmallText"
                    android:padding="4dp"
                    android:text="@string/app_description"
                    tools:context=".MainActivity" />
            </LinearLayout>
        </com.gvkorea.gvktune.view.view.rt.util.NowLayout>
    </ScrollView>

</RelativeLayout>